<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView 
	    android:layout_width="match_parent"
	  	android:layout_height="match_parent"
	  	android:background="@drawable/bg"/>
    
    <com.yc.health.widget.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fillViewport="true"
        android:scrollbars="none" >
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="10dp"
		    android:orientation="vertical" >
		
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		    	android:layout_marginRight="20dp">
		        <ImageView 
		            android:id="@+id/test_back"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/btn_back_nor"/>
		        
		        <ImageView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerHorizontal="true"
		        	android:src="@drawable/title_grxx"/>
		    </RelativeLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="30dp"
		        android:layout_marginLeft="20dp"
		    	android:layout_marginRight="20dp"
		        android:orientation="vertical">
		        
		        <TextView 
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="您好！"
		        	android:textColor="@color/text"
		        	android:textSize="@dimen/title"/>
		        
		        <EditText 
		            android:id="@+id/test_inputUserName"
		        	android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="20dp"
		        	android:padding="5dp"
		        	android:hint="请输入对您的称呼"
		        	android:textColorHint="@color/ajk_selected"
		        	android:textColor="@color/ajk_selected"
		        	android:textSize="@dimen/second_title"/>
		        
		        <RelativeLayout 
		            android:id="@+id/test_selectSex"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="20dp">
			        
		            <TextView 
		                android:id="@+id/test_sexhint"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:layout_gravity="center_vertical"
			        	android:layout_marginLeft="5dp"
			        	android:clickable="true"
			        	android:text="请选择您的性别"
			        	android:textColor="@color/ajk_selected"
			        	android:textSize="@dimen/second_title"/>
		            
		            <TextView 
		                android:id="@+id/test_sex"
		                android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:layout_alignParentRight="true"
			        	android:clickable="true"
			        	android:text="男"
			        	android:textColor="@color/ajk"
			        	android:textSize="@dimen/second_title" />
		            
		            <View 
		                android:layout_below="@id/test_sex"
		                android:layout_width="wrap_content"
		                android:layout_marginTop="5dp"
			        	android:layout_height="0.5dp"
			        	android:background="@color/ajk_selected"/>
			    </RelativeLayout>
		        
		        <RelativeLayout 
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="20dp">
			        <TextView 
			            android:id="@+id/test_inputDate"
			        	android:layout_width="match_parent"
			        	android:layout_height="wrap_content"
			        	android:layout_marginLeft="5dp"
			        	android:clickable="true"
			        	android:text="点击设置出生日期"
			        	android:textColor="@color/ajk_selected"
			        	android:textSize="@dimen/second_title"/>
			        
			        <View 
		                android:layout_below="@id/test_inputDate"
		                android:layout_width="wrap_content"
		                android:layout_marginTop="5dp"
			        	android:layout_height="0.5dp"
			        	android:background="@color/ajk_selected"/>
		        </RelativeLayout>
		        
		        <RelativeLayout 
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="20dp">
			        
		            <TextView 
		                android:id="@+id/test_city"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:layout_gravity="center_vertical"
			        	android:layout_marginLeft="5dp"
			        	android:clickable="true"
			        	android:text="点击设置所在城市"
			        	android:textColor="@color/ajk_selected"
			        	android:textSize="@dimen/second_title"/>
		            
		            <View 
		                android:layout_below="@id/test_city"
		                android:layout_width="wrap_content"
		                android:layout_marginTop="5dp"
			        	android:layout_height="0.5dp"
			        	android:background="@color/ajk_selected"/>
			        
		        </RelativeLayout>
		        
		        <TextView 
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="20dp"
		        	android:text="本软件根据年龄、性别、地域来设计了不同的定制服务，请认真填写信息"
		        	android:textColor="@color/text"
		        	android:textSize="@dimen/text"/>
		        
		        <ImageView
		            android:id="@+id/test_startTest"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_gravity="center_horizontal"
		        	android:layout_marginTop="20dp"
		        	android:src="@drawable/btn_login_nor"/>
		    </LinearLayout>
		</LinearLayout>
	</com.yc.health.widget.CustomScrollView>
</FrameLayout>